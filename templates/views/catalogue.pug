extends ../layouts/default

block content

	.container-fluid: .content
		- 
			var items = [{ name: 'Catalogue', url: '/catalogue'}]
			if (locals.category)
				items.push({ name: locals.category.name})
		+breadcrumb(items)

		.row
			.col-sm-12
				h1 Find stuff to buy
				if locals.category
					h2= locals.category.name

		.row
			each cat in locals.categories
				.col-sm-6
					.well.well-lg
						//- terrible hack.  Also need to be better at pug !
						if cat.parentCategory
							a(href='/catalogue/search/' + cat.id) 
								h3= cat.name
						else
							a(href='/catalogue/' + cat.id) 
								h3= cat.name
						p!= cat.description.html
